CC=@CC@
bindir=@bindir@
mandir=@mandir@

rgrep: rgrep.c config.h
	$(CC) -o rgrep rgrep.c -ltermcap

install: install-bin install-man

install-bin:
	@INSTALL_DATA@ $(DESTDIR)@bindir@
	@INSTALL_PROG@ rgrep $(DESTDIR)@bindir@/rgrep

install-man:
	@INSTALL_DIR@ $(DESTDIR)@mandir@/man1
	@INSTALL_DATA@ rgrep.1 $(DESTDIR)@mandir@/man1

spotless distclean: clean
	rm -f @GENERATED_FILES@ @CONFIGURE_FILES@
	
clean:
	rm -f rgrep
